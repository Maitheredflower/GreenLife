<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#ffffffff">


    <EditText
        android:id="@+id/id"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/edittext_border"
        android:ems="12"
        android:hint="  id"
        android:inputType="textPersonName"
        android:textColorHint="#95A1AA"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/edittext_border"
        android:ems="12"
        android:hint="  邮箱"
        android:inputType="textPersonName"
        android:textColorHint="#95A1AA"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/edittext_border"
        android:ems="12"
        android:hint="  账号"
        android:inputType="textPersonName"
        android:textColorHint="#95A1AA"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/passwd"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/edittext_border"
        android:ems="12"
        android:hint="  密码"
        android:inputType="textPersonName"
        android:textColorHint="#95A1AA"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/active_code"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/passwd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/edittext_border"
        android:ems="12"
        android:hint="  激活码"
        android:inputType="textPersonName"
        android:textColorHint="#95A1AA"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/commit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/active_code"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_border"
        android:text="提交"
        android:textColor="#ffffff"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@+id/active_code"
        app:layout_constraintTop_toBottomOf="@+id/active_code" />

    <Button
        android:id="@+id/active"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/commit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/button_border"
        android:text="激活"
        android:textColor="#ffffff"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="@+id/commit"
        app:layout_constraintTop_toBottomOf="@+id/commit" />

</RelativeLayout>